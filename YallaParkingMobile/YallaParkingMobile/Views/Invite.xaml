<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:telerikPrimitives="clr-namespace:Telerik.XamarinForms.Primitives;assembly=Telerik.XamarinForms.Primitives"
    xmlns:telerikInput="clr-namespace:Telerik.XamarinForms.Input;assembly=Telerik.XamarinForms.Input"
    xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin.Abstractions"
    x:Class="YallaParkingMobile.Invite"
    Title="Invite"
    Appearing="Handle_Appearing"
    NavigationPage.HasBackButton="False">
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Activated="Button_Clicked"
            Order="Primary"
            Priority="0"
            Icon="hamburgerMenu.png">
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <telerikPrimitives:RadSideDrawer
            x:Name="Menu"
            DrawerLength="200"
            BackgroundColor="White">
            <telerikPrimitives:RadSideDrawer.MainContent>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition
                            Height="*" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="*" />
                    </Grid.RowDefinitions>
                    <Image
                        Margin="40"
                        Source="invite.png"
                        Grid.Row="0"
                        VerticalOptions="Center"
                        Aspect="AspectFit" />
                    <ContentView
                        Padding="0,40,0,0"
                        Grid.Row="1">
                        <Label
                            Style="{StaticResource Header}"
                            VerticalTextAlignment="Center"
                            Text="YP781624" />
                    </ContentView>
                    <Label
                        Margin="40"
                        Grid.Row="2"
                        HorizontalTextAlignment="Center"
                        Text="Get 25% off your booking when you invite a friend. Your friend gets 25% off too" />
                    <ContentView
                        Padding="40"
                        Grid.Row="3">
                        <Button                                                    
                            Style="{StaticResource GreenButton}"
                            Text="Invite Now"
                            HorizontalOptions="Fill"
                            VerticalOptions="End" />
                    </ContentView>
                </Grid>
            </telerikPrimitives:RadSideDrawer.MainContent>
           <telerikPrimitives:RadSideDrawer.DrawerContent>
                <StackLayout
                    Margin="0,10,0,0">
                    <controls:CircleImage
                        x:Name="ProfileImage"
                        Margin="10"
                        WidthRequest="80"
                        HeightRequest="80"
                        BorderColor="#a1a1b4"
                        BorderThickness="1"
                        HorizontalOptions="Center"
                        Source="menu-profile.png"
                        Aspect="AspectFill">
                    </controls:CircleImage>
                    <Label
                        x:Name="ProfileName"
                        HorizontalOptions="Center"
                        Style="{StaticResource Header}" />
                    <StackLayout
                        Margin="20, 20, 10, 10"
                        Orientation="Horizontal">
                        <Image
                            Margin="0,0,5,0"
                            HeightRequest="30"
                            VerticalOptions="Center"
                            Source="menu-car.png" />
                        <Button
                            x:Name="FindParking"
                            FontSize="18"
                            Text="Find Parking"
                            TextColor="#ff8e30"
                            HorizontalOptions="Start"
                            Clicked="FindParking_Clicked" />
                    </StackLayout>
                    <StackLayout
                        Margin="20, 10, 10, 10"
                        Orientation="Horizontal">
                        <Image
                            Margin="0,0,5,0"
                            HeightRequest="30"
                            VerticalOptions="Center"
                            Source="menu-bookings.png" />
                        <Button
                            x:Name="MyBookings"
                            FontSize="18"
                            Text="My Bookings"
                            TextColor="#ff8e30"
                            HorizontalOptions="Start"
                            Clicked="MyBookings_Clicked" />
                    </StackLayout>
                    <StackLayout
                        Margin="20, 10, 10, 10"
                        Orientation="Horizontal">
                        <Image
                            Margin="0,0,5,0"
                            HeightRequest="30"
                            VerticalOptions="Center"
                            Source="menu-profile.png" />
                        <Button
                            x:Name="MyProfile"
                            FontSize="18"
                            Text="My Profile"
                            TextColor="#ff8e30"
                            HorizontalOptions="Start"
                            Clicked="MyProfile_Clicked" />
                    </StackLayout>
                    <StackLayout
                        Margin="20, 10, 10, 10"
                        Orientation="Horizontal">
                        <Image
                            Margin="0,0,5,0"
                            HeightRequest="30"
                            VerticalOptions="Center"
                            Source="menu-invite.png" />
                        <Button
                            x:Name="InviteButton"
                            FontSize="18"
                            Text="Invite"
                            TextColor="#ff8e30"
                            HorizontalOptions="Start"
                            Clicked="Invite_Clicked" />
                    </StackLayout>
                    <StackLayout
                        Margin="20, 10, 10, 10"
                        Orientation="Horizontal">
                        <Image
                            Margin="0,0,5,0"
                            HeightRequest="30"
                            VerticalOptions="Center"
                            Source="menu-logout.png" />
                        <Button
                            x:Name="Logout"
                            FontSize="18"
                            Text="Logout"
                            TextColor="#ff8e30"
                            HorizontalOptions="Start"
                            Clicked="Logout_Clicked" />
                    </StackLayout>
                </StackLayout>
            </telerikPrimitives:RadSideDrawer.DrawerContent>
        </telerikPrimitives:RadSideDrawer>
    </ContentPage.Content>
</ContentPage>