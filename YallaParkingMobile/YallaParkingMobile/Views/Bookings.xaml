<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:telerikPrimitives="clr-namespace:Telerik.XamarinForms.Primitives;assembly=Telerik.XamarinForms.Primitives"
    xmlns:telerikInput="clr-namespace:Telerik.XamarinForms.Input;assembly=Telerik.XamarinForms.Input"
    x:Class="YallaParkingMobile.Bookings"
    Title="My Bookings"
    Appearing="Handle_Appearing"
    NavigationPage.HasBackButton="False">
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Activated="Button_Clicked"
            Order="Primary"
            Priority="0"
            Icon="hamburgerMenu.png">
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <telerikPrimitives:RadSideDrawer
            x:Name="Menu"
            DrawerLength="200"
            BackgroundColor="White">
            <telerikPrimitives:RadSideDrawer.MainContent>
                <telerikPrimitives:RadBusyIndicator
                    x:Name="BusyIndicator"
                    AnimationContentHeightRequest="50"
                    AnimationContentWidthRequest="50"
                    AnimationContentColor="#ff8e30"
                    IsBusy="{Binding IsBusy}">
                    <telerikPrimitives:RadBusyIndicator.BusyContent>
                        <Label
                            Text="Loading bookings..." />
                    </telerikPrimitives:RadBusyIndicator.BusyContent>
                    <telerikPrimitives:RadBusyIndicator.Content>
                        <Grid>
                            <Grid
                                IsVisible="{Binding HasNoBookings}">
                                <Grid.RowDefinitions>
                                    <RowDefinition
                                        Height="*" />
                                    <RowDefinition
                                        Height="Auto" />
                                    <RowDefinition
                                        Height="Auto" />
                                    <RowDefinition
                                        Height="*" />
                                </Grid.RowDefinitions>
                                <Image
                                    Margin="40"
                                    Source="bookingConfirmed.png"
                                    Grid.Row="0"
                                    VerticalOptions="Center"
                                    Aspect="AspectFit" />
                                <ContentView
                                    Padding="0,40,0,0"
                                    Grid.Row="1">
                                    <Label
                                        Style="{StaticResource Header}"
                                        VerticalTextAlignment="Center"
                                        Text="No Bookings Yet" />
                                </ContentView>
                                <Label
                                    Margin="40"
                                    Grid.Row="2"
                                    HorizontalTextAlignment="Center"
                                    Text="You haven't booked or completed any parking yet, start searching for parking below" />
                                <ContentView
                                    Padding="40"
                                    Grid.Row="3">
                                    <Button
                                        x:Name="SearchButton"
                                        Clicked="SearchButton_Clicked"
                                        Style="{StaticResource GreenButton}"
                                        Text="Search Parking"
                                        HorizontalOptions="Fill"
                                        VerticalOptions="End" />
                                </ContentView>
                            </Grid>
                            <ListView
                                x:Name="BookingList"
                                HasUnevenRows="true"
                                SeparatorVisibility="None"
                                ItemSelected="Handle_ItemSelected"
                                IsVisible="{Binding HasBookings}"
                                ItemsSource="{Binding BookingsGrouped}"
                                IsGroupingEnabled="true"
                                GroupDisplayBinding="{Binding Key}">
                                <ListView.SeparatorVisibility>None</ListView.SeparatorVisibility>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <ViewCell
                                            Height="130">
                                            <Grid
                                                VerticalOptions="FillAndExpand"
                                                ColumnSpacing="10"
                                                RowSpacing="5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition
                                                        Width="0.4*" />
                                                    <ColumnDefinition
                                                        Width="*" />
                                                    <ColumnDefinition
                                                        Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition
                                                        Height="Auto" />
                                                    <RowDefinition
                                                        Height="Auto" />
                                                </Grid.RowDefinitions>
                                                 <Image
                                                        HeightRequest="80"
                                                    Margin="10,10,10,0"
                                                        Aspect="AspectFill"
                                                        Source="{Binding PropertyImage}" />
                                                <StackLayout
                                                    VerticalOptions="CenterAndExpand"
                                                    Grid.Column="1">
                                                    <Label
                                                        HorizontalOptions="StartAndExpand"
                                                        FontSize="16"
                                                        TextColor="Black"
                                                        Text="{Binding PropertyName}"
                                                        Style="{StaticResource Header}" />
                                                    <Label
                                                        FontSize="12"
                                                        HorizontalOptions="StartAndExpand"
                                                        Text="{Binding PropertyPropertyArea}" />
                                                    <Label
                                                        FontSize="12"
                                                        HorizontalOptions="StartAndExpand"
                                                        Text="{Binding PropertyCity}" />
                                                </StackLayout>
                                                <Image
                                                    Grid.Column="2"
                                                    VerticalOptions="Center"
                                                    Aspect="AspectFit"
                                                    Source="disclaimer.png" />
                                                <Label
                                                    Grid.Row="1"
                                                    FontSize="12"
                                                    VerticalOptions="Start"
                                                    HorizontalOptions="Center"
                                                    Text="{Binding Number}" />
                                                <ContentView
                                                    Grid.Row="1"
                                                    Grid.Column="1"
                                                    Grid.ColumnSpan="2"
                                                    Padding="8"
                                                    IsVisible="{Binding Pending}"
                                                    BackgroundColor="#ff8e30">
                                                    <Label
                                                        TextColor="White"
                                                        FontSize="13"
                                                        HorizontalTextAlignment="Start"
                                                        Text="{Binding BookingTime}" />
                                                </ContentView>
                                                <ContentView
                                                    Grid.Row="1"
                                                    Grid.Column="1"
                                                    Grid.ColumnSpan="2"
                                                    Padding="8"
                                                    Margin="10,0,0,0"
                                                    IsVisible="{Binding Active}"
                                                    BackgroundColor="#ff8e30">
                                                    <Label
                                                        TextColor="White"
                                                        FontSize="13"
                                                        HorizontalTextAlignment="Start"
                                                        Text="{Binding BookingTime}" />
                                                </ContentView>
                                                <ContentView
                                                    Grid.Row="1"
                                                    Grid.Column="1"
                                                    Grid.ColumnSpan="2"
                                                    Padding="8"
                                                    IsVisible="{Binding Completed}"
                                                    BackgroundColor="#5FD25F">
                                                    <Label
                                                        TextColor="White"
                                                        FontSize="13"
                                                        HorizontalTextAlignment="Start"
                                                        Text="Completed" />
                                                </ContentView>
                                            </Grid>
                                        </ViewCell>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </telerikPrimitives:RadBusyIndicator.Content>
                </telerikPrimitives:RadBusyIndicator>
            </telerikPrimitives:RadSideDrawer.MainContent>
            <telerikPrimitives:RadSideDrawer.DrawerContent>
                <StackLayout>
                    <StackLayout
                        Margin="20, 10, 10, 10"
                        Orientation="Horizontal">
                        <Image
                            Margin="0,0,5,0"
                            Source="menu-car.png" />
                        <Button
                            x:Name="FindParking"
                            FontSize="18"
                            Text="Find Parking"
                            TextColor="#ff8e30"
                            HorizontalOptions="Start"
                            Clicked="FindParking_Clicked" />
                    </StackLayout>
                    <StackLayout
                        Margin="20, 10, 10, 10"
                        Orientation="Horizontal">
                        <Image
                            Margin="0,0,5,0"
                            Source="menu-bookings.png" />
                        <Button
                            x:Name="MyBookings"
                            FontSize="18"
                            Text="My Bookings"
                            TextColor="#ff8e30"
                            HorizontalOptions="Start"
                            Clicked="MyBookings_Clicked" />
                    </StackLayout>
                    <StackLayout
                        Margin="20, 10, 10, 10"
                        Orientation="Horizontal">
                        <Image
                            Margin="0,0,5,0"
                            Source="menu-profile.png" />
                        <Button
                            x:Name="MyProfile"
                            FontSize="18"
                            Text="My Profile"
                            TextColor="#ff8e30"
                            HorizontalOptions="Start"
                            Clicked="MyProfile_Clicked" />
                    </StackLayout>
                    <StackLayout
                        Margin="20, 10, 10, 10"
                        Orientation="Horizontal">
                        <Image
                            Margin="0,0,5,0"
                            Source="menu-invite.png" />
                        <Button
                            x:Name="Invite"
                            FontSize="18"
                            Text="Invite"
                            TextColor="#ff8e30"
                            HorizontalOptions="Start"
                            Clicked="Invite_Clicked" />
                    </StackLayout>
                    <StackLayout
                        Margin="20, 10, 10, 10"
                        Orientation="Horizontal">
                        <Image
                            Margin="0,0,5,0"
                            Source="menu-logout.png" />
                        <Button
                            x:Name="Logout"
                            FontSize="18"
                            Text="Logout"
                            TextColor="#a1a1b4"
                            HorizontalOptions="Start"
                            Clicked="Logout_Clicked" />
                    </StackLayout>
                </StackLayout>
            </telerikPrimitives:RadSideDrawer.DrawerContent>
        </telerikPrimitives:RadSideDrawer>
    </ContentPage.Content>
</ContentPage>